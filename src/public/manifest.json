  "shortcuts": [
    {
      "name": "Launch Dashboard",
      "short_name": "Dashboard",
      "description": "Quick access to inventory dashboard",
      "url": "/?view=dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Control",
      "short_name": "Voice",
      "description": "Activate voice commands",
      "url": "/?action=voice",
      "icons": [
        {
          "src": "/icons/voice-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Barcode Scanner",
      "short_name": "Scan",
      "description": "Open barcode scanner",
      "url": "/?action=scan",
      "icons": [
        {
          "src": "/icons/scan-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "MaycoleTracker™ Dashboard - Desktop View"
    },
    {
      "src": "/screenshots/mobile-launcher.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "MaycoleTracker™ Launcher - Mobile View"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "protocol_handlers": [
    {
      "protocol": "web+maycoletracker",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}