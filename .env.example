# MaycoleTechnologiesâ„¢ - Environment Variables Template
# Copy this file to .env.local and fill in the actual values
# NEVER commit .env or .env.local files to version control

# Application Configuration
VITE_DEMO_MODE=false
VITE_API_BASE_URL=https://api.maycoletechnologies.com

# Analytics & Tracking
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CLICK_TRACKING=true
VITE_GA_TRACKING_ID=

# Contact & Support
VITE_CONTACT_EMAIL=help@maycoletechnologies.com

# ===== PAYMENT INTEGRATION - STRIPE =====
# Get these from your Stripe Dashboard: https://dashboard.stripe.com
# PUBLIC KEY: Settings > API Keys > Publishable Key
# SECRET KEY: Settings > API Keys > Secret Key (Server-side only)
VITE_STRIPE_PUBLIC_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Stripe Price IDs (from your Stripe Products setup)
VITE_STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_YOUR_PROFESSIONAL_MONTHLY_ID
VITE_STRIPE_PRICE_PROFESSIONAL_YEARLY=price_YOUR_PROFESSIONAL_YEARLY_ID
VITE_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_YOUR_ENTERPRISE_MONTHLY_ID
VITE_STRIPE_PRICE_ENTERPRISE_YEARLY=price_YOUR_ENTERPRISE_YEARLY_ID

# Stripe Webhook Secret (for backend event handling)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ===== EMAIL SERVICES =====
# SendGrid Email Service (Optional - for contact forms & transactional emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@maycoletechnologies.com

# Mailchimp Newsletter Service (Optional - for newsletter signup)
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=
MAILCHIMP_SERVER_PREFIX=us1

# ===== MONITORING & LOGGING =====
# Sentry Error Tracking (Optional - for production monitoring)
VITE_SENTRY_DSN=

# ===== FEATURE FLAGS =====
VITE_ENABLE_LIVE_CHAT=false
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_PAYMENTS=true
