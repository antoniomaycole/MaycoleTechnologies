{
  "name": "maycole-technologies-website",
  "version": "1.0.0",
  "description": "MaycoleTechnologiesâ„¢ - Changing The Future One Product At A Time - Professional website with Oracle-level presentation quality",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run format && npm run lint:fix && tsc && vite build",
    "build:production": "npm run clean && npm run format && npm run lint && npm run type-check && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache .vite",
    "clean:all": "rm -rf dist node_modules/.cache node_modules .vite",
    "reinstall": "npm run clean:all && npm install",
    "test:build": "npm run lint && npm run type-check && npm run build",
    "verify": "node scripts/verify-deployment.js",
    "deploy:check": "npm run verify && npm run build:production",
    "analyze": "npx vite-bundle-analyzer dist",
    "size:check": "npm run build:production && npx bundlesize",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "motion": "^10.18.0",
    "lucide-react": "^0.445.0",
    "recharts": "^2.12.7",
    "react-hook-form": "7.55.0",
    "sonner": "2.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript-eslint": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.2",
    "@eslint/js": "^9.12.0",
    "globals": "^15.11.0",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "tailwindcss": "^3.4.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.0",
    "terser": "^5.36.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "husky": "^9.1.6"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "vite",
    "maycole-technologies",
    "professional-website",
    "agile-practices",
    "spring-logic"
  ],
